# Example .env file for backend configuration

PORT=3000
NODE_ENV=development

OPENAI_API_KEY=your_openai_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# PDF Processing Limits
MAX_PDF_SIZE_MB=10
PDF_REQUEST_TIMEOUT_MS=30000

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=chrome-extension://*,moz-extension://*,http://localhost:3000,http://localhost:3001,http://localhost:8000

# MongoDB URI
MONGODB_URI=mongodb://localhost:27017/revisionApp

# JWT Secret for Authentication
JWT_SECRET=your_super_secret_key_here_for_jwt_signing