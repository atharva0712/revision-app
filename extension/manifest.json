{
  "manifest_version": 3,
  "name": "Learning Content Extractor",
  "version": "1.0.0",
  "description": "Extract and organize web content into learning topics",

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:3000/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "index.html",
    "default_title": "Extract Learning Content"
  }
}